<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/calculator_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.90"
            android:gravity="bottom|right"
            android:maxLines="1"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="70sp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/C"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="-6dp"
                android:layout_marginBottom="-8dp"
                android:layout_weight="1"
                android:backgroundTint="#CFD0D2"
                android:text="AC"
                android:textColor="#575757"
                android:textSize="25sp" />

            <Button
                android:id="@+id/pos_neg"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="-6dp"
                android:layout_marginBottom="-8dp"
                android:layout_weight="1"
                android:backgroundTint="#CFD0D2"
                android:text="+/-"
                android:textColor="#575757"
                android:textSize="25sp" />

            <Button
                android:id="@+id/percent"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="-6dp"
                android:layout_marginBottom="-8dp"
                android:layout_weight="1"
                android:backgroundTint="#CFD0D2"
                android:text="%"
                android:textColor="#575757"
                android:textSize="25sp" />

            <Button
                android:id="@+id/divide"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="-8dp"
                android:layout_weight="1"
                android:backgroundTint="#F57A13"

                android:text="/"
                android:textColor="#575757"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num_7"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-4dp"
                android:layout_marginRight="-6dp"
                android:layout_marginBottom="-8dp"
                android:layout_weight="1"
                android:backgroundTint="#CFD0D2"
                android:text="7"
                android:textColor="#575757"
                android:textSize="25sp" />

            <Button
                android:id="@+id/num_8"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-4dp"
                android:layout_marginRight="-6dp"
                android:layout_marginBottom="-8dp"
                android:layout_weight="1"
                android:backgroundTint="#CFD0D2"
                android:text="8"
                android:textColor="#575757"
                android:textSize="25sp" />

            <Button
                android:id="@+id/num_9"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-4dp"
                android:layout_marginRight="-6dp"
                android:layout_marginBottom="-8dp"
                android:layout_weight="1"
                android:backgroundTint="#CFD0D2"
                android:text="9"
                android:textColor="#575757"
                android:textSize="25sp" />

            <Button
                android:id="@+id/num_mult"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-4dp"
                android:layout_marginBottom="-8dp"
                android:layout_weight="1"
                android:backgroundTint="#F57A13"

                android:text="x"
                android:textColor="#575757"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num_4"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-4dp"
                android:layout_marginRight="-6dp"
                android:layout_marginBottom="-8dp"
                android:layout_weight="1"
                android:backgroundTint="#CFD0D2"
                android:text="4"
                android:textColor="#575757"
                android:textSize="25sp" />

            <Button
                android:id="@+id/num_5"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-4dp"
                android:layout_marginRight="-6dp"
                android:layout_marginBottom="-8dp"
                android:layout_weight="1"
                android:backgroundTint="#CFD0D2"
                android:text="5"
                android:textColor="#575757"
                android:textSize="25sp" />

            <Button
                android:id="@+id/num_6"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-4dp"
                android:layout_marginRight="-6dp"
                android:layout_marginBottom="-8dp"
                android:layout_weight="1"
                android:backgroundTint="#CFD0D2"
                android:text="6"
                android:textColor="#575757"
                android:textSize="25sp" />

            <Button
                android:id="@+id/num_sub"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-4dp"
                android:layout_marginBottom="-8dp"
                android:layout_weight="1"
                android:backgroundTint="#F57A13"

                android:text="-"
                android:textColor="#575757"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num_1"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-4dp"
                android:layout_marginRight="-6dp"
                android:layout_marginBottom="-8dp"
                android:layout_weight="1"

                android:backgroundTint="#CFD0D2"
                android:text="1"
                android:textColor="#575757"
                android:textSize="25sp" />

            <Button
                android:id="@+id/num_2"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-4dp"
                android:layout_marginRight="-6dp"
                android:layout_marginBottom="-8dp"
                android:layout_weight="1"
                android:backgroundTint="#CFD0D2"
                android:text="2"
                android:textColor="#575757"
                android:textSize="25sp" />

            <Button
                android:id="@+id/num_3"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-4dp"
                android:layout_marginRight="-6dp"
                android:layout_marginBottom="-8dp"
                android:layout_weight="1"
                android:backgroundTint="#CFD0D2"
                android:text="3"
                android:textColor="#575757"
                android:textSize="25sp" />

            <Button
                android:id="@+id/num_add"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-4dp"
                android:layout_marginBottom="-8dp"
                android:layout_weight="1"
                android:backgroundTint="#F57A13"
                android:text="+"
                android:textColor="#575757"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num_0"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-4dp"
                android:layout_marginRight="-4dp"
                android:layout_weight="0.5"
                android:backgroundTint="#CFD0D2"
                android:text="0"
                android:textColor="#575757"
                android:textSize="25sp" />

            <Button
                android:id="@+id/dot"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-2dp"
                android:layout_marginTop="-4dp"
                android:layout_marginRight="-6dp"
                android:layout_weight="0.254"
                android:backgroundTint="#CFD0D2"
                android:text="."
                android:textColor="#575757"
                android:textSize="25sp" />

            <Button
                android:id="@+id/equals"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="-4dp"

                android:layout_weight="0.255"

                android:backgroundTint="#F57A13"
                android:text="="
                android:textColor="#575757"
                android:textSize="25sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>